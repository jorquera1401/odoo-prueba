<odoo>
    <record model="ir.ui.view" id="prueba_list_form">
      <field name="name">prueba list</field>
      <field name="model">prueba.course</field>
      <field name="arch" type="xml">
        <form>
        <h3>Ingresar datos del plan 2 </h3>
            <group col="3">
                <group colspan="1">
                    <field name="name"/>
                </group>
                <group colspan="2">
                    <group >
                        <field name="description"/>
                    </group>
                    <group >
                        <field name="fecha"/>
                    </group>
                    <group >
                        <field name="campo"/>
                    </group>
                </group>
            </group>
            <h3>Ingresar valor plan</h3>
            <group col="2">
                <group colspan="1">
                    <field name="precio"/>
                   
                </group>
                <group colspan="1">
                    <field name="impuesto"/>
                    <field name="total"/>
                </group>
            </group>
        </form>
      </field>
    </record>

     <record model="ir.ui.view" id="prueba_list_tree">
      <field name="name">prueba list</field>
      <field name="model">prueba.course</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/> 
          <field name="fecha"/>
          <field name="campo"/>
          <field name="description"/>
          <field name="precio"/>
        </tree>
      </field>
    </record>


</odoo>