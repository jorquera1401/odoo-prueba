<odoo>
        <record model="ir.ui.view" id="carrera_list_tree">
      <field name="name">carrera list</field>
      <field name="model">prueba.carrera</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/> 
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="carrera_list_form">
      <field name="name">prueba list</field>
      <field name="model">prueba.carrera</field>
      <field name="arch" type="xml">
        <form>
            <group>
                    <field name="name"/>
            </group>
        </form>
      </field>
    </record>
    <record model="ir.actions.act_window" id="carrera_list_action">
        <field name="name">Carrera</field>
        <field name="type">ir.actions.act_window</field>
    </record>
    <menuitem id="carrera_menu" name="Carreras" parent="prueba_menu" action="carrera_list_action"/>


</odoo>